<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/songs_fragment_item_root_layout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/songs_fragment_item_relative_layout"

        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/songs_fragment_item_song_cover"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/songs_fragment_item_linear_layout"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/songs_fragment_item_song_cover"
            android:layout_marginStart="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/songs_fragment_item_song_name"
                android:text="@string/songs_list_fragment_item_song_name"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/songs_fragment_item_artist_name"
                android:text="@string/songs_list_fragment_item_artist_name" />



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/songs_fragment_button_linear_layout"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_marginRight="10dp">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/songs_fragment_item_button"
            android:background="@drawable/ic_action_add_playlist" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>