<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/genres_list_fragment_item_root_layout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/genres_list_fragment_item_relative_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genres_list_fragment_item_genre_name"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="@string/genres_list_fragment_item_genre_name_placeholder"
            android:textColor="@android:color/primary_text_light" />
    </RelativeLayout>
</LinearLayout>