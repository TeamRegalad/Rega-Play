<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/albums_list_fragment_item_root_layout"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/albums_list_fragment_item_relative_layout"
        android:background="?android:attr/selectableItemBackground"
        android:layout_weight="0.06">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/albums_list_fragment_item_album_cover"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/albums_list_fragment_item_album_cover"
            android:layout_marginStart="15dp"
            android:id="@+id/albums_list_fragment_item_linear_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/albums_list_fragment_item_album_name_placeholder"
                android:id="@+id/albums_list_fragment_item_album_name"
                android:layout_alignTop="@+id/albums_list_fragment_item_album_cover"
                android:layout_toEndOf="@+id/albums_list_fragment_item_album_cover"
                android:layout_weight="0.08"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/albums_list_fragment_item_artist_name_placeholder"
                android:id="@+id/albums_list_fragment_item_artist_name"
                android:layout_alignTop="@+id/albums_list_fragment_item_linear_layout"
                android:layout_alignStart="@+id/albums_list_fragment_item_linear_layout" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>