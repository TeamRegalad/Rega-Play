<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/albums_list_fragment_item_root_layout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/albums_list_fragment_item_relative_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/albums_list_fragment_item_album_cover"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/albums_list_fragment_item_album_name_placeholder"
            android:id="@+id/albums_list_fragment_item_album_name"
            android:layout_alignBottom="@+id/albums_list_fragment_item_album_cover"
            android:layout_toEndOf="@+id/albums_list_fragment_item_album_cover" />
    </RelativeLayout>
</LinearLayout>