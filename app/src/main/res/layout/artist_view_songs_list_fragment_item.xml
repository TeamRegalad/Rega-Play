<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/artist_songs_list_fragment_item_root_layout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/artist_songs_list_fragment_item_relative_layout">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/artist_songs_list_fragment_item_song_cover"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/artist_songs_list_fragment_item_linear_layout"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/artist_songs_list_fragment_item_song_cover"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/artist_songs_list_fragment_item_song_name"
                android:text="@string/songs_list_fragment_item_song_name"
                android:textColor="@android:color/primary_text_light" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>