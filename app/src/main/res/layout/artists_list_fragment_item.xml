<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/artists_list_fragment_item_root_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/artists_list_fragment_item_relative_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/artists_list_fragment_item_artist_name_placeholder"
            android:id="@+id/artists_list_fragment_item_artist_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:singleLine="false" />
    </RelativeLayout>
</LinearLayout>